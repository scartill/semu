/// Test for local variables
    
ldr &start a
jmp a

DW stack*100

start:
ldr &stack a
lsp a

ldc 4 a
CALL fact
.assert a 24
ssp a
.assert a 88
hlt

FUNC fact
    DW val a
    DW vval b           // dummy
BEGIN

    ldr &nonzero h      // if a > 0 goto nonzero
    jgt a h
    
    ldc 1 a             // else return 1
    RETURN
    
nonzero:
    LSTORE a val
    LSTORE b vval
    
    ldc 1 b         // a--
    sub a b a
        
    CALL fact       // a = fact(a)
  
    LLOAD val b     // b = val
    
    mul a b a       // return a * b

    RETURN
END
