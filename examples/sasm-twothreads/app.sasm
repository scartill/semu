/// User thread functions

DS kernel::TCB maintcb
DW mainstack*100

DS kernel::TCB sectcb
DW secstack*100

FUNC Start
    ldr &mainstack a
    ldr &TLoop b
    ldc 65 c
    ldr &maintcb d
    CALL api::CreateThread
    
    ldr &secstack a
    ldr &TLoop b
    ldc 66 c
    ldr &sectcb d
    CALL api::CreateThread    
    
    ret

// Thread func for both threads
FUNC TLoop // symbol
    push a
    CALL api::Print
    pop a
    nop
    ldr &TLoop c
    jmp c
